<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kênh Người Bán - MegaStore VN</title>
    <link rel="stylesheet" href="/css/seller.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="seller-header">
        <div class="container">
            <div class="logo">
                <h1>MegaStore VN</h1>
                <span class="seller-badge">Kênh Người Bán</span>
            </div>
            <div class="header-right">
                <a href="#" class="notification">
                    <i class="fas fa-bell"></i>
                    <span class="badge">3</span>
                </a>
                <div class="user-menu">
                    <img src="/images/avatar-default.jpg" alt="User Avatar" class="avatar">
                    <span>Admin</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>
    </header>

    <%- include('./../elements/navbar') %>
 <!-- Promotion Section -->
 <section id="promotion" class="content-section" style="display: '<%= activeTab === 'promotion' ? 'block' : 'none' %>'">
    <div class="section-header">
        <h2>Quản Lý Mã Giảm Giá</h2>
        <button class="btn-primary" id="addPromotionBtn">
            <i class="fas fa-plus"></i> Tạo mã giảm giá mới
        </button>
    </div>

    <!-- Promotion Form (Hidden by default) -->
    <div class="promotion-form" style="display: none;">
        <div class="form-group">
            <label>Tên mã giảm giá</label>
            <input type="text" placeholder="Nhập tên mã giảm giá">
        </div>
        <div class="form-row">
            <div class="form-group">
                <label>Mã giảm giá</label>
                <input type="text" placeholder="Nhập mã">
            </div>
            <div class="form-group">
                <label>Loại giảm giá</label>
                <select>
                    <option value="percentage">Phần trăm</option>
                    <option value="fixed">Số tiền cố định</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label>Giá trị giảm</label>
                <input type="number" placeholder="Nhập giá trị">
            </div>
            <div class="form-group">
                <label>Số lượng mã</label>
                <input type="number" placeholder="Nhập số lượng">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label>Ngày bắt đầu</label>
                <input type="date">
            </div>
            <div class="form-group">
                <label>Ngày kết thúc</label>
                <input type="date">
            </div>
        </div>
        <div class="form-group">
            <label>Điều kiện áp dụng</label>
            <input type="number" placeholder="Đơn hàng tối thiểu (VNĐ)">
        </div>
        <div class="form-actions">
            <button class="btn-primary">Lưu mã giảm giá</button>
            <button class="btn-secondary" id="cancelPromotionBtn">Hủy</button>
        </div>
    </div>

    <!-- Active Promotions -->
    <div class="promotions-list">
        <div class="section-header">
            <h3>Mã giảm giá đang hoạt động</h3>
        </div>
        <div class="promotions-grid">
            <div class="promotion-card">
                <div class="promotion-header">
                    <h4>Giảm 20%</h4>
                    <span class="promotion-code">SALE20</span>
                </div>
                <div class="promotion-details">
                    <p><i class="fas fa-percentage"></i> Giảm 20%</p>
                    <p><i class="fas fa-calendar"></i> 01/04/2024 - 30/04/2024</p>
                    <p><i class="fas fa-tag"></i> Đơn hàng tối thiểu: 500,000 VNĐ</p>
                    <p><i class="fas fa-ticket"></i> Còn lại: 50/100 mã</p>
                </div>
                <div class="promotion-actions">
                    <button class="btn-icon"><i class="fas fa-edit"></i></button>
                    <button class="btn-icon"><i class="fas fa-trash"></i></button>
                </div>
            </div>
            <!-- More promotion cards... -->
        </div>
    </div>

    <!-- Expired Promotions -->
    <div class="promotions-list">
        <div class="section-header">
            <h3>Mã giảm giá đã hết hạn</h3>
        </div>
        <div class="promotions-grid">
            <div class="promotion-card expired">
                <div class="promotion-header">
                    <h4>Giảm 50K</h4>
                    <span class="promotion-code">SALE50K</span>
                </div>
                <div class="promotion-details">
                    <p><i class="fas fa-money-bill"></i> Giảm 50,000 VNĐ</p>
                    <p><i class="fas fa-calendar"></i> 01/03/2024 - 31/03/2024</p>
                    <p><i class="fas fa-tag"></i> Đơn hàng tối thiểu: 300,000 VNĐ</p>
                    <p><i class="fas fa-ticket"></i> Đã sử dụng: 100/100 mã</p>
                </div>
            </div>
            <!-- More expired promotion cards... -->
        </div>
    </div>
</section>