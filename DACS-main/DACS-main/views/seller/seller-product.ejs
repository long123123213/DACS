<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Sản Phẩm - MegaStore VN</title>
    <link rel="stylesheet" href="/css/seller.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="seller-header">
        <div class="container">
            <div class="logo">
                <h1>MegaStore VN</h1>
                <span class="seller-badge">Kênh Người Bán</span>
            </div>
            <div class="header-right">
                <a href="#" class="notification">
                    <i class="fas fa-bell"></i>
                    <span class="badge">3</span>
                </a>
                <div class="user-menu">
                    <img src="/images/avatar-default.jpg" alt="User Avatar" class="avatar">
                    <span>Admin</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>
    </header>

    <%- include('./../elements/navbar') %>

    <div class="seller-layout">
        <main class="main-content">
            <section class="content-section">
                <div class="section-header">
                    <h2>Quản Lý Sản Phẩm</h2>
                    <div class="section-actions">
                        <div class="search-box">
                            <input type="text" class="search-input" placeholder="Tìm kiếm sản phẩm...">
                            <i class="fas fa-search"></i>
                        </div>
                        <select class="filter-select">
                            <option value="all">Tất cả danh mục</option>
                            <option value="electronics">Điện tử</option>
                            <option value="fashion">Thời trang</option>
                            <option value="home">Nhà cửa</option>
                            <option value="beauty">Làm đẹp</option>
                        </select>
                        <select class="filter-select">
                            <option value="all">Tất cả trạng thái</option>
                            <option value="active">Đang bán</option>
                            <option value="outofstock">Hết hàng</option>
                            <option value="hidden">Ẩn</option>
                        </select>
                        <button class="btn-primary" onclick="openAddProductModal()">
                            <i class="fas fa-plus"></i> Thêm sản phẩm
                        </button>
                    </div>
                </div>

                <div class="product-table">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" class="select-all">
                                </th>
                                <th>Sản phẩm</th>
                                <th>SKU</th>
                                <th>Giá</th>
                                <th>Tồn kho</th>
                                <th>Đã bán</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="checkbox" class="select-item">
                                </td>
                                <td>
                                    <div class="product-cell">
                                        <img src="/images/product-placeholder.jpg" alt="Product">
                                        <div>
                                            <p class="product-name">iPhone 14 Pro Max</p>
                                            <p class="product-category">Điện tử > Điện thoại</p>
                                        </div>
                                    </div>
                                </td>
                                <td>IP14PM-256-BLK</td>
                                <td>
                                    <div class="price-info">
                                        <span class="current-price">25,000,000 ₫</span>
                                        <span class="original-price">27,000,000 ₫</span>
                                    </div>
                                </td>
                                <td>50</td>
                                <td>150</td>
                                <td>
                                    <span class="status-badge active">Đang bán</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="btn-icon edit" onclick="openEditProductModal()" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn-icon view" title="Xem">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn-icon delete" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="pagination">
                    <button class="btn-page" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="btn-page active">1</button>
                    <button class="btn-page">2</button>
                    <button class="btn-page">3</button>
                    <span class="pagination-dots">...</span>
                    <button class="btn-page">10</button>
                    <button class="btn-page">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </section>

            <!-- Add/Edit Product Modal -->
            <div class="modal" id="productModal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Thêm Sản Phẩm Mới</h3>
                        <button class="btn-close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="product-form">
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Tên sản phẩm</label>
                                    <input type="text" placeholder="Nhập tên sản phẩm">
                                </div>
                                <div class="form-group">
                                    <label>SKU</label>
                                    <input type="text" placeholder="Nhập mã SKU">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label>Danh mục</label>
                                    <select>
                                        <option value="">Chọn danh mục</option>
                                        <option value="electronics">Điện tử</option>
                                        <option value="fashion">Thời trang</option>
                                        <option value="home">Nhà cửa</option>
                                        <option value="beauty">Làm đẹp</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Thương hiệu</label>
                                    <input type="text" placeholder="Nhập thương hiệu">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label>Giá bán</label>
                                    <input type="number" placeholder="Nhập giá bán">
                                </div>
                                <div class="form-group">
                                    <label>Giá gốc</label>
                                    <input type="number" placeholder="Nhập giá gốc">
                                </div>
                                <div class="form-group">
                                    <label>Số lượng</label>
                                    <input type="number" placeholder="Nhập số lượng">
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <textarea rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Hình ảnh sản phẩm</label>
                                <div class="image-upload">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                    <p>Kéo thả hoặc click để tải ảnh lên</p>
                                    <p class="text-muted">Hỗ trợ: JPG, PNG, GIF (Tối đa 5MB)</p>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <select>
                                        <option value="active">Đang bán</option>
                                        <option value="hidden">Ẩn</option>
                                        <option value="outofstock">Hết hàng</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button class="btn-outline" onclick="closeProductModal()">Hủy</button>
                        <button class="btn-primary">
                            <i class="fas fa-save"></i> Lưu sản phẩm
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        function openAddProductModal() {
            document.getElementById('productModal').classList.add('active');
        }

        function openEditProductModal() {
            document.getElementById('productModal').classList.add('active');
            document.querySelector('.modal-header h3').textContent = 'Chỉnh Sửa Sản Phẩm';
        }

        function closeProductModal() {
            document.getElementById('productModal').classList.remove('active');
        }

        // Close modal when clicking outside
        document.getElementById('productModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeProductModal();
            }
        });

        // Close modal when clicking close button
        document.querySelector('.btn-close').addEventListener('click', closeProductModal);
    </script>
</body>
</html>
