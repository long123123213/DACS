<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cài Đặt - MegaStore VN</title>
    <link rel="stylesheet" href="/css/seller.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="seller-header">
        <div class="container">
            <div class="logo">
                <h1>MegaStore VN</h1>
                <span class="seller-badge">Kênh Người Bán</span>
            </div>
            <div class="header-right">
                <a href="#" class="notification">
                    <i class="fas fa-bell"></i>
                    <span class="badge">3</span>
                </a>
                <div class="user-menu">
                    <img src="/images/avatar-default.jpg" alt="User Avatar" class="avatar">
                    <span>Admin</span>
                    <i class="fas fa-chevron-down"></i>
                </div>
            </div>
        </div>
    </header>

    <%- include('./../elements/navbar') %>

    <div class="seller-layout">
        <main class="main-content">
            <section class="content-section">
                <div class="section-header">
                    <h2>Cài Đặt</h2>
                </div>

                <div class="settings-grid">
                    <!-- Thông tin cửa hàng -->
                    <div class="settings-card">
                        <div class="card-header">
                            <h3>Thông tin cửa hàng</h3>
                            <button class="btn-outline" onclick="openEditStoreModal()">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="info-group">
                                <label>Tên cửa hàng</label>
                                <p>MegaStore VN</p>
                            </div>
                            <div class="info-group">
                                <label>Địa chỉ</label>
                                <p>123 Đường ABC, Quận 1, TP.HCM</p>
                            </div>
                            <div class="info-group">
                                <label>Số điện thoại</label>
                                <p>0901234567</p>
                            </div>
                            <div class="info-group">
                                <label>Email</label>
                                <p>contact@megastore.vn</p>
                            </div>
                            <div class="info-group">
                                <label>Mô tả cửa hàng</label>
                                <p>Chuyên cung cấp các sản phẩm điện tử, thời trang và phụ kiện chính hãng.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Cài đặt vận chuyển -->
                    <div class="settings-card">
                        <div class="card-header">
                            <h3>Cài đặt vận chuyển</h3>
                            <button class="btn-outline" onclick="openShippingModal()">
                                <i class="fas fa-cog"></i> Cài đặt
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="info-group">
                                <label>Phương thức vận chuyển</label>
                                <div class="shipping-methods">
                                    <span class="badge">Giao hàng nhanh</span>
                                    <span class="badge">Giao hàng tiết kiệm</span>
                                </div>
                            </div>
                            <div class="info-group">
                                <label>Khu vực giao hàng</label>
                                <p>Toàn quốc</p>
                            </div>
                            <div class="info-group">
                                <label>Thời gian giao hàng</label>
                                <p>2-4 ngày làm việc</p>
                            </div>
                        </div>
                    </div>

                    <!-- Cài đặt thanh toán -->
                    <div class="settings-card">
                        <div class="card-header">
                            <h3>Cài đặt thanh toán</h3>
                            <button class="btn-outline" onclick="openPaymentModal()">
                                <i class="fas fa-cog"></i> Cài đặt
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="info-group">
                                <label>Phương thức thanh toán</label>
                                <div class="payment-methods">
                                    <span class="badge">Chuyển khoản</span>
                                    <span class="badge">Thanh toán khi nhận hàng</span>
                                </div>
                            </div>
                            <div class="info-group">
                                <label>Thông tin ngân hàng</label>
                                <p>Vietcombank - 1234567890 - MegaStore VN</p>
                            </div>
                        </div>
                    </div>

                    <!-- Cài đặt thông báo -->
                    <div class="settings-card">
                        <div class="card-header">
                            <h3>Cài đặt thông báo</h3>
                            <button class="btn-outline" onclick="openNotificationModal()">
                                <i class="fas fa-cog"></i> Cài đặt
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="notification-settings">
                                <label class="checkbox-label">
                                    <input type="checkbox" checked>
                                    Thông báo đơn hàng mới
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" checked>
                                    Thông báo đơn hàng đã hủy
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" checked>
                                    Thông báo đánh giá mới
                                </label>
                                <label class="checkbox-label">
                                    <input type="checkbox" checked>
                                    Thông báo khuyến mãi
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Bảo mật -->
                    <div class="settings-card">
                        <div class="card-header">
                            <h3>Bảo mật</h3>
                            <button class="btn-outline" onclick="openSecurityModal()">
                                <i class="fas fa-lock"></i> Cài đặt
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="info-group">
                                <label>Mật khẩu</label>
                                <p>********</p>
                            </div>
                            <div class="info-group">
                                <label>Xác thực 2 yếu tố</label>
                                <p>Chưa bật</p>
                            </div>
                            <div class="info-group">
                                <label>Lịch sử đăng nhập</label>
                                <p>Xem lịch sử đăng nhập</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Edit Store Modal -->
            <div class="modal" id="editStoreModal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Chỉnh sửa thông tin cửa hàng</h3>
                        <button class="btn-close">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form class="store-form">
                            <div class="form-group">
                                <label>Tên cửa hàng</label>
                                <input type="text" value="MegaStore VN">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input type="text" value="123 Đường ABC, Quận 1, TP.HCM">
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="tel" value="0901234567">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" value="contact@megastore.vn">
                            </div>
                            <div class="form-group">
                                <label>Mô tả cửa hàng</label>
                                <textarea rows="4">Chuyên cung cấp các sản phẩm điện tử, thời trang và phụ kiện chính hãng.</textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button class="btn-outline" onclick="closeEditStoreModal()">Hủy</button>
                        <button class="btn-primary">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        function openEditStoreModal() {
            document.getElementById('editStoreModal').classList.add('active');
        }

        function closeEditStoreModal() {
            document.getElementById('editStoreModal').classList.remove('active');
        }

        function openShippingModal() {
            // TODO: Implement shipping settings modal
            console.log('Opening shipping settings modal...');
        }

        function openPaymentModal() {
            // TODO: Implement payment settings modal
            console.log('Opening payment settings modal...');
        }

        function openNotificationModal() {
            // TODO: Implement notification settings modal
            console.log('Opening notification settings modal...');
        }

        function openSecurityModal() {
            // TODO: Implement security settings modal
            console.log('Opening security settings modal...');
        }

        // Close modal when clicking outside
        document.getElementById('editStoreModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEditStoreModal();
            }
        });

        // Close modal when clicking close button
        document.querySelector('.btn-close').addEventListener('click', closeEditStoreModal);
    </script>
</body>
</html>
