<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng - MegaStore VN</title>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
   

    <main class="cart-page">
        <div class="container">
            <div class="cart-header">
                <h1>Giỏ hàng của bạn</h1>
                <p class="cart-count">3 sản phẩm</p>
            </div>

            <div class="cart-content">
                <div class="cart-items">
                    <!-- Cart Item 1 -->
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/images/products/sac-du-phong.jpg" alt="Sạc dự phòng">
                            <button class="remove-item">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="item-details">
                            <h3>Sạc Dự Phòng Orsen EW64 PD 20W</h3>
                            <div class="item-meta">
                                <span class="item-category">Phụ kiện điện tử</span>
                                <span class="item-seller">Bán bởi: MegaStore Official</span>
                            </div>
                        </div>
                        <div class="item-price">
                            <div class="price-info">
                                <span class="current-price">591.500₫</span>
                                <span class="original-price">845.000₫</span>
                                <span class="discount">-30%</span>
                            </div>
                        </div>
                        <div class="item-quantity">
                            <button class="qty-btn minus">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" value="1" min="1" max="99">
                            <button class="qty-btn plus">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <div class="item-total">
                            591.500₫
                        </div>
                    </div>

                    <!-- Cart Item 2 -->
                    <div class="cart-item">
                        <div class="item-image">
                            <img src="/images/products/keyboard.jpg" alt="Bàn phím">
                            <button class="remove-item">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="item-details">
                            <h3>Bàn phím cơ Gaming AKKO 3068B Plus</h3>
                            <div class="item-meta">
                                <span class="item-category">Gaming Gear</span>
                                <span class="item-seller">Bán bởi: AKKO Official</span>
                            </div>
                        </div>
                        <div class="item-price">
                            <div class="price-info">
                                <span class="current-price">1.290.000₫</span>
                                <span class="original-price">1.590.000₫</span>
                                <span class="discount">-19%</span>
                            </div>
                        </div>
                        <div class="item-quantity">
                            <button class="qty-btn minus">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" value="1" min="1" max="99">
                            <button class="qty-btn plus">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <div class="item-total">
                            1.290.000₫
                        </div>
                    </div>
                </div>

                <div class="cart-summary">
                    <div class="summary-card">
                        <h2>Tổng giỏ hàng</h2>
                        
                        <div class="summary-items">
                            <div class="summary-item">
                                <span>Tạm tính</span>
                                <span>1.881.500₫</span>
                            </div>
                            <div class="summary-item">
                                <span>Giảm giá</span>
                                <span>-553.500₫</span>
                            </div>
                            <div class="summary-item shipping">
                                <span>Phí vận chuyển</span>
                                <span>Miễn phí</span>
                            </div>
                        </div>

                        <div class="coupon-section">
                            <div class="input-group">
                                <input type="text" placeholder="Nhập mã giảm giá">
                                <button class="btn-apply">Áp dụng</button>
                            </div>
                        </div>

                        <div class="summary-total">
                            <span>Tổng cộng</span>
                            <span class="total-amount">1.881.500₫</span>
                        </div>

                        <button class="btn-checkout">
                            <i class="fas fa-lock"></i>
                            Thanh toán an toàn
                        </button>

                        <div class="payment-methods">
                            <p>Chấp nhận thanh toán</p>
                            <div class="payment-icons">
                                <i class="fab fa-cc-visa"></i>
                                <i class="fab fa-cc-mastercard"></i>
                                <i class="fab fa-cc-paypal"></i>
                                <img src="/images/momo-icon.png" alt="Momo">
                                <img src="/images/zalopay-icon.png" alt="ZaloPay">
                            </div>
                        </div>
                    </div>

                    <div class="continue-shopping">
                        <a href="/">
                            <i class="fas fa-arrow-left"></i>
                            Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

   

    <script>
        // Quantity buttons functionality
        document.querySelectorAll('.qty-btn').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.parentElement.querySelector('input');
                const currentValue = parseInt(input.value);
                
                if (this.classList.contains('minus') && currentValue > 1) {
                    input.value = currentValue - 1;
                } else if (this.classList.contains('plus') && currentValue < 99) {
                    input.value = currentValue + 1;
                }
                
                updateCartTotal();
            });
        });

        // Remove item functionality
        document.querySelectorAll('.remove-item').forEach(button => {
            button.addEventListener('click', function() {
                this.closest('.cart-item').remove();
                updateCartCount();
                updateCartTotal();
            });
        });

        function updateCartCount() {
            const itemCount = document.querySelectorAll('.cart-item').length;
            document.querySelector('.cart-count').textContent = `${itemCount} sản phẩm`;
        }

        function updateCartTotal() {
            // Add logic to recalculate cart total
            console.log('Updating cart total...');
        }
    </script>
</body>
</html> 