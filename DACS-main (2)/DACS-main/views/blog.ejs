<!-- Custom CSS -->
<style>
.hover-scale {
    transition: transform 0.2s ease-in-out;
}
.hover-scale:hover {
    transform: translateY(-5px);
}
.posts-scroll {
    -ms-overflow-style: none;
    scrollbar-width: none;
}
.posts-scroll::-webkit-scrollbar {
    display: none;
}
.bg-gradient {
    background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
}
</style>

<!-- Custom JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const postsContainer = document.querySelector('.posts-scroll');
    const scrollLeftBtn = document.querySelector('.post-scroll-left');
    const scrollRightBtn = document.querySelector('.post-scroll-right');
    
    scrollLeftBtn.addEventListener('click', () => {
        postsContainer.scrollBy({
            left: -350,
            behavior: 'smooth'
        });
    });
    
    scrollRightBtn.addEventListener('click', () => {
        postsContainer.scrollBy({
            left: 350,
            behavior: 'smooth'
        });
    });
});
</script>

