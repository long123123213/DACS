                                <option value="fixed">Số tiền cố định</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Giá trị giảm</label>
                            <input type="number" placeholder="Nhập giá trị">
                        </div>
                        <div class="form-group">
                            <label>Số lượng mã</label>
                            <input type="number" placeholder="Nhập số lượng">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Ngày bắt đầu</label>
                            <input type="date">
                        </div>
                        <div class="form-group">
                            <label>Ngày kết thúc</label>
                            <input type="date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Điều kiện áp dụng</label>
                        <input type="number" placeholder="Đơn hàng tối thiểu (VNĐ)">
                    </div>
                    <div class="form-actions">
                        <button class="btn-primary">Lưu mã giảm giá</button>
                        <button class="btn-secondary" id="cancelPromotionBtn">Hủy</button>
                    </div>
                </div>

                <!-- Active Promotions -->
                <div class="promotions-list">
                    <div class="section-header">
                        <h3>Mã giảm giá đang hoạt động</h3>
                    </div>
                    <div class="promotions-grid">
                        <div class="promotion-card">
                            <div class="promotion-header">
                                <h4>Giảm 20%</h4>
                                <span class="promotion-code">SALE20</span>
                            </div>
                            <div class="promotion-details">
                                <p><i class="fas fa-percentage"></i> Giảm 20%</p>
                                <p><i class="fas fa-calendar"></i> 01/04/2024 - 30/04/2024</p>
                                <p><i class="fas fa-tag"></i> Đơn hàng tối thiểu: 500,000 VNĐ</p>
                                <p><i class="fas fa-ticket"></i> Còn lại: 50/100 mã</p>
                            </div>
                            <div class="promotion-actions">
                                <button class="btn-icon"><i class="fas fa-edit"></i></button>
                                <button class="btn-icon"><i class="fas fa-trash"></i></button>
                            </div>
                        </div>
                        <!-- More promotion cards... -->
                    </div>
                </div>

                <!-- Expired Promotions -->
                <div class="promotions-list">
                    <div class="section-header">
                        <h3>Mã giảm giá đã hết hạn</h3>
                    </div>
                    <div class="promotions-grid">
                        <div class="promotion-card expired">
                            <div class="promotion-header">
                                <h4>Giảm 50K</h4>
                                <span class="promotion-code">SALE50K</span>
                            </div>
                            <div class="promotion-details">
                                <p><i class="fas fa-money-bill"></i> Giảm 50,000 VNĐ</p>
                                <p><i class="fas fa-calendar"></i> 01/03/2024 - 31/03/2024</p>
                                <p><i class="fas fa-tag"></i> Đơn hàng tối thiểu: 300,000 VNĐ</p>
                                <p><i class="fas fa-ticket"></i> Đã sử dụng: 100/100 mã</p>
                            </div>
                        </div>
                        <!-- More expired promotion cards... -->
                    </div>
                </div>
            </section>

            <!-- Settings Section -->
            <section id="settings" class="content-section" style="display: '<%= activeTab === 'settings' ? 'block' : 'none' %>'">
                <div class="section-header">
                    <h2>Thiết Lập Shop</h2>
                </div>

                <div class="settings-grid">
                    <div class="settings-card">
                        <h3><i class="fas fa-store"></i> Thông tin cửa hàng</h3>
                        <form class="settings-form">
                            <div class="form-group">
                                <label>Tên cửa hàng</label>
                                <input type="text" value="MegaStore VN">
                            </div>
                            <div class="form-group">
                                <label>Logo cửa hàng</label>
                                <div class="image-upload">
                                    <img src="/images/store-logo.jpg" alt="Store Logo">
                                    <button type="button" class="btn-secondary">Thay đổi</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea rows="3">Cửa hàng chuyên cung cấp các sản phẩm chất lượng cao</textarea>
                            </div>
                        </form>
                    </div>

                    <div class="settings-card">
                        <h3><i class="fas fa-truck"></i> Vận chuyển</h3>
                        <div class="shipping-settings">
                            <div class="setting-item">
                                <span>Giao hàng nhanh</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="setting-item">
                                <span>Giao hàng tiết kiệm</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="settings-card">
                        <h3><i class="fas fa-money-bill"></i> Thanh toán</h3>
                        <div class="payment-settings">
                            <div class="setting-item">
                                <span>Thanh toán khi nhận hàng (COD)</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="setting-item">
                                <span>Thanh toán online</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <button class="btn-secondary">
                                <i class="fas fa-plus"></i> Thêm phương thức thanh toán
                            </button>
                        </div>
                    </div>

                    <div class="settings-card">
                        <h3><i class="fas fa-bell"></i> Thông báo</h3>
                        <div class="notification-settings">
                            <div class="setting-item">
                                <span>Thông báo đơn hàng mới</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="setting-item">
                                <span>Thông báo chat khách hàng</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="setting-item">
                                <span>Thông báo email</span>
                                <label class="switch">
                                    <input type="checkbox" checked>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="settings-actions">
                    <button class="btn-primary">Lưu thay đổi</button>
                    <button class="btn-secondary">Hủy</button>
                </div>
            </section>
        </main>
    </div>
</body>
</html> 