    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    text-align: center;
}

.store-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
    margin-bottom: 30px;
    padding-bottom: 30px;
    border-bottom: 1px solid #eee;
}

.store-avatar {
    width: 120px;
    height: 120px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    margin: 0 auto;
}

.store-details {
    text-align: center;
}

.store-name-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin-bottom: 10px;
    flex-wrap: wrap;
}

.store-name-wrapper h1 {
    font-size: 24px;
    font-weight: 600;
    color: #2d3436;
    margin: 0;
}

.verified-badge {
    background: linear-gradient(45deg, #00aeff, #0056b3);
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.store-status {
    color: #636e72;
    font-size: 14px;
    margin-bottom: 15px;
}

.store-actions {
    display: flex;
    gap: 15px;
}

.btn-follow, .btn-chat {
    padding: 10px 25px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.btn-follow {
    background: linear-gradient(45deg, #00aeff, #0056b3);
    color: white;
    border: none;
}

.btn-chat {
    background: white;
    color: #00aeff;
    border: 2px solid #00aeff;
}

.btn-follow:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,174,255,0.3);
}

.btn-chat:hover {
    background: #f8f9fa;
}

.store-metrics {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
}

.metric-card {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
}

.metric-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.metric-value {
    font-size: 24px;
    font-weight: 600;
    color: #00aeff;
    margin-bottom: 5px;
}

.metric-label {
    color: #636e72;
    font-size: 14px;
}

/* Category Navigation */
.category-nav {
    display: flex;
    justify-content: center;
    background: white;
    padding: 5px;
    margin-bottom: 30px;
    border-radius: 15px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    overflow-x: auto;
}

.nav-item {
    position: relative;
    padding: 15px 25px;
}

.nav-item a {
    color: #636e72;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.nav-item.active a {
    color: #00aeff;
}

